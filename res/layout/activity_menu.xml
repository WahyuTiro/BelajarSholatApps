<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lyMenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rowMenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnSubuh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Alphabet" />

            <ImageView
                android:id="@+id/btnDzuhur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Membaca" />

            <ImageView
                android:id="@+id/btnAshar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Alphabet" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowMenu1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btnMaghrib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Membaca" />

            <ImageView
                android:id="@+id/btnIsya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belajar Membaca" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
